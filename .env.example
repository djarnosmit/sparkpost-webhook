# SparkPost Authentication Configuration
# Set SPARKPOST_AUTH_TYPE to either "basic", "oauth", or "none"
SPARKPOST_AUTH_TYPE=basic

# Basic Authentication (when SPARKPOST_AUTH_TYPE=basic)
SPARKPOST_WEBHOOK_USERNAME=your-webhook-username
SPARKPOST_WEBHOOK_PASSWORD=your-webhook-password

# OAuth 2.0 Authentication (when SPARKPOST_AUTH_TYPE=oauth)
SPARKPOST_OAUTH_CLIENT_ID=your-oauth-client-id
SPARKPOST_OAUTH_JWKS_ENDPOINT=https://your-auth-provider.com/.well-known/jwks.json
SPARKPOST_OAUTH_AUDIENCE=your-audience
SPARKPOST_OAUTH_SCOPES=webhook:write,events:read

# For development/testing - use "none" to disable authentication
# SPARKPOST_AUTH_TYPE=none

# Elasticsearch Configuration
ELASTICSEARCH_CLOUD_ID=your-elasticsearch-cloud-id
ELASTICSEARCH_API_KEY=your-elasticsearch-api-key

# Application Configuration
NODE_ENV=production
LOG_LEVEL=debug

# Debug Configuration
# Set to true to log all HTTP headers (use with caution in production)
LOG_HTTP_HEADERS=true

# Optional: Vercel-specific settings (automatically set by Vercel)
# VERCEL_URL=your-vercel-domain.vercel.app